<div class="w-75 mx-auto m-auto">
  <p class="fs-1">Ro'yxatdan o'tish</p>
  {{#if registerError}}
   <div
      class="alert alert-danger alert-dismissible fade show"
      id="errorCloseBtn"
      role="alert"
    >
      <strong>Xatolik: </strong>
      {{registerError}}
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
  {{/if}}
  <form action="./register" method="post">
    <div class="d-flex gap-3">
      <div class="form-floating mb-3 w-50">
        <input
          name="firstname"
          type="text"
          class="form-control"
          id="firstname"
          placeholder="firstname"
        />
        <label for="floatingInput">Ismingiz:</label>
      </div>
      <div class="form-floating mb-3 w-50">
        <input
          name="lastname"
          type="text"
          class="form-control"
          id="lastname"
          placeholder="lastname"
        />
        <label for="floatingInput">Familiyangiz:</label>
      </div>
    </div>
    <div class="form-floating mb-3">
      <input
        name="email"
        type="email"
        class="form-control"
        id="email"
        placeholder="name@example.com"
      />
      <label for="floatingInput">Emailingiz:</label>
    </div>
    <div class="form-floating">
      <input
        name="password"
        type="password"
        class="form-control"
        id="floatingPassword"
        placeholder="Password"
      />
      <label for="floatingPassword">Parol:</label>
    </div>
    <button class="btn btn-primary mt-3">Yuborish</button>

  </form>
</div>