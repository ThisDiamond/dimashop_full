<!-- tavfsiya etamiz -->
<div class="main-content">

  <div class="category-name">
    <div>
      <h3 class="p-0 m-0">Tavfsiya etamiz!</h3>
      <small>Eng yaxshilari</small>
    </div>
    <div class="seemore-btn">
      Yana ko'rish
      <i class="bi bi-caret-right-fill"></i>
    </div>
  </div>

  <div class="products">
    {{#each product}}
      {{#ifKatta 11 @index}}
        <div class="product">
          <div class="product-img-area">
            <img src="{{image}}" alt="" class="product-img" />
          </div>
          <div class="product-text">
            <h5 class="product-th">{{title}}</h5>
            <small class="product-price">Narxi: {{price}}</small>
          </div>
          <div class="product-footer">
            <div class="product-rating">
              <i class="bi bi-star-fill"></i>
              <span>4.9</span>
            </div>
            <div class="addProduct-btn-area">
              <i
                class="bi bi-heart"
                style="color:crimson; font-size:25px; margin-top:2px"
              ></i>
              <div class="addProduct-btn">
                +
              </div>
            </div>
          </div>
        </div>
      {{/ifKatta}}
    {{/each}}
  </div>
</div>

